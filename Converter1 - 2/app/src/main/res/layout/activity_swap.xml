<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.halvkul.converter1.SwapActivity">

    <Button
        android:text="Convert"
        android:layout_height="wrap_content"
        android:id="@+id/convertBtn"
        android:layout_width="180dp"
        android:onClick="convertNow"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_width="200dp"
        android:layout_above="@+id/convertBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp" />

    <TextView
        android:text="Metre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_above="@+id/enterFoot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/enterYard"
        android:layout_alignEnd="@+id/enterYard" />

    <TextView
        android:text="Centimetre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_above="@+id/enterInch"
        android:layout_alignLeft="@+id/enterInch"
        android:layout_alignStart="@+id/enterInch" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/enterFoot"
        android:textAlignment="center"
        android:text="0"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/enterYard"
        android:layout_alignBottom="@+id/enterYard"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/enterYard"
        android:textAlignment="center"
        android:text="@string/Hint"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:text="0"
        android:id="@+id/enterInch"
        android:textAlignment="center"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/enterFoot"
        android:layout_alignBottom="@+id/enterFoot"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Decimetre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_above="@+id/enterFoot"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Swap"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSwap"
        android:layout_width="180dp"
        android:onClick="swap"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/spinner2"
        android:layout_toEndOf="@+id/spinner2" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>